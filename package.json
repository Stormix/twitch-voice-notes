{
  "name": "dwi-voice-notes",
  "version": "0.1.5",
  "description": "A browser extension that allows you to record voice notes and send them to your friends on Twitch.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Stormix/twitch-voice-notes.git"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "test": "vitest",
    "commitlint": "commitlint --edit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/react": "^0.26.4",
    "@headlessui/react": "^1.7.17",
    "@radix-ui/colors": "^3.0.0",
    "@sentry/browser": "^7.91.0",
    "clsx": "^2.0.0",
    "construct-style-sheets-polyfill": "3.1.0",
    "date-fns": "^3.0.6",
    "get-blob-duration": "^1.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.12.0",
    "react-media-recorder": "^1.6.6",
    "tailwind-merge": "^2.2.0",
    "wavesurfer.js": "^7.6.0",
    "webextension-polyfill": "0.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "18.2.0",
    "@commitlint/config-conventional": "18.1.0",
    "@rollup/plugin-typescript": "11.1.5",
    "@testing-library/react": "14.0.0",
    "@types/chrome": "0.0.251",
    "@types/node": "20.8.10",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.14",
    "@types/ws": "8.5.8",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.18.0",
    "@vitejs/plugin-react": "4.2.0",
    "autoprefixer": "^10.4.16",
    "chokidar": "3.5.3",
    "cross-env": "7.0.3",
    "eslint": "8.53.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "fs-extra": "11.1.1",
    "husky": "8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "15.0.2",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.32",
    "prettier": "3.1.0",
    "rollup": "4.3.0",
    "sass": "1.69.5",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.0",
    "ts-loader": "9.5.0",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "vite": "5.0.0",
    "vitest": "^0.34.6",
    "ws": "8.14.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@8.9.2",
  "pnpm": {
    "patchedDependencies": {
      "webextension-polyfill@0.10.0": "patches/webextension-polyfill@0.10.0.patch"
    }
  }
}
